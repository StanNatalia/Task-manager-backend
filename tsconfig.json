{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": "./src",
    "moduleResolution": "node",

    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true
  },
  "include": ["src"]
}
